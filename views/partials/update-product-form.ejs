<div id="update-form-popup">
    <form id="update-form-container">
        <h1>Edit Product</h1>
        <label for="id"> </label>
        <input id="id" type="number" placeholder="ID" name="id" value= <%= meal.id %> readonly>
        <label for="name"> </label>
        <input id="name" type="text" placeholder="Name" name="name" value= <%= meal.name %>>
        <label for="category"></label>
        <input id="category" type="text" placeholder="Category" name="category" value= <%= meal.category %>>
        <label for="subcategory"></label>
        <input id="subcategory" type="text" placeholder="Subcategory" name="subcategory" value= <%= meal.subcategory %>>
        <label for="price"></label>
        <input id="price" type="number" min="0" step="0.01" placeholder="Price" name="price" value= <%= meal.price %>>
        <label for="cost"></label>
        <input id="cost" type="number" min="0" step="0.01" placeholder="Cost" name="cost"value= <%= meal.cost %>>
        <button class="btn" id="update-save-product" type="submit" value=<%=meal.id %>>Update</button>
        <button id="update-cancel-btn" type="button">Close</button>
    </form>
</div>